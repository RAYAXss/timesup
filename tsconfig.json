{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    /* React */
    "jsx": "react-jsx",

    /* Comportement TS */
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,

    /* Qualité & sécurité */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Vite */
    "types": ["vite/client"]
  },

  "include": [
    "src",
    "vite.config.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "old"
  ]
}
